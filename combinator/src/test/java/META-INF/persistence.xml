<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    <persistence-unit name="PU">     
        <provider>org.hibernate.ejb.HibernatePersistence</provider>     
        <class>com.laboratorio.modelo.Materia</class> 
        <class>com.laboratorio.modelo.MateriaAprobada</class> 
        <class>com.laboratorio.modelo.Curso</class> 
        <class>com.laboratorio.modelo.Alumno</class>
        <class>com.laboratorio.modelo.Horario</class>
        <class>com.laboratorio.modelo.PlanEstudio</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>            
            <property name="hibernate.show_sql" value="true" />         
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />         
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />         
            <property name="hibernate.connection.username" value="pp2" />          
            <property name="hibernate.connection.password" value="labo" />          

        </properties>
    </persistence-unit>
</persistence>